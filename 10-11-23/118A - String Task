Question: 118A - String Task

Code:
#include<iostream>
#include<algorithm>
#include<string>
using namespace std;

int main()
{
   string s;
   cin >> s;
   string ans;
   ans += '.';
   for(int i=0; i<s.length(); i++)
   {
        if(s[i]=='a' || s[i]=='A' ||
        s[i]=='e' || s[i]=='E' ||
        s[i]=='i' || s[i]=='I' ||
        s[i]=='o' || s[i]=='O' ||
        s[i]=='u' || s[i]=='U'||
        s[i]=='y' || s[i]=='Y' )
        {
          continue;
        }
        else if(isupper(s[i]))
        {
          ans+= tolower(s[i]);
          ans+= '.';
        }
        else
        {
          ans+= s[i];
          ans+= '.';
        }
        
   }
   int k= ans.length();
   ans.erase(k-1);
   cout << ans << endl;
}
